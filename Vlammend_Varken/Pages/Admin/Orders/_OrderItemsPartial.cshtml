@model List<OrderOverview>

<table class="table">
    <thead>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Price Each</th>
            <th>Total</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MenuItem?.Name</td>
                <td>@item.Quantity</td>
                <td>@item.PriceEach.ToString("C")</td>
                <td>@item.PriceTotal.ToString("C")</td>
                <td>@item.Note</td>
            </tr>
        }
    </tbody>
</table>

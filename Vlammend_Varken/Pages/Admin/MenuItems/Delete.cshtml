@page
@model Vlammend_Varken.Pages.Admin.MenuItems.DeleteModel
@{
    ViewData["Title"] = "Delete Menu Item";
    ViewData["ActivePage"] = "MenuItems";
    Layout = "_LayoutAdmin";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>MenuItem</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MenuItem!.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MenuItem!.Name)
        </dd>

        <!-- Include other properties you want to display -->

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MenuItem!.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MenuItem!.Price)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="MenuItem.Id" />

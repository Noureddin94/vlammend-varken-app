@page
@model Vlammend_Varken.Pages.Admin.Categories.IndexModel
@{
    ViewData["Title"] = "Categories";
    Layout = "_LayoutAdmin";
    ViewData["ActivePage"] = "Categories";
}

<div class="d-flex justify-content-between align-items-center m-4 p-4" style="background-color: #dfe0e1">
    <h2>Menu Categories</h2>
    <a asp-page="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Create New
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Image</th>
                <th>Description</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.MenuCategories)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Image))
                        {
                            <img src="@item.Image" alt="@item.Name" style="height:100px; width:100px;" />
                        }
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Description))
                        {
                            @item.Description
                        }
                        else
                        {
                            <span class="text-muted fst-italic">No description provided</span>
                        }
                    <td>
                        <span class="badge @(item.IsActive ? "bg-success" : "bg-secondary")">
                            @(item.IsActive ? "Active" : "Inactive")
                        </span>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                <i class="fas fa-edit">Edit</i>
                            </a>
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash">Delete</i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

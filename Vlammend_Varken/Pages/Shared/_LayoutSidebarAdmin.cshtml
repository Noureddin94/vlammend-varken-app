@if (User.Identity?.IsAuthenticated == true)
{
    <div class="sidebar col-md-3 col-lg-2 d-md-inline bg-dark sidebar collapse" id="sidebarMenu" style="min-height: 97vh;">
        <div class="position-sticky pt-3">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Dashboard" ? "active" : "") text-white" href="/Admin">
                        <i class="fas fa-tachometer-alt me-2"></i>
                        Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "MenuItems" ? "active" : "") text-white" href="/Admin/MenuItems">
                        <i class="fas fa-utensils me-2"></i>
